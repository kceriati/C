<Window x:Class="BindingBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingBase"
        mc:Ignorable="d"
        Title="BindingBase" Height="130" Width="310">
    <Grid>
        <Label Content="Nom : " HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nomTexte" Text="{Binding Nom}" HorizontalAlignment="Left" Height="25" Margin="70,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Age : " HorizontalAlignment="Left" Margin="20,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ageTexte" Text="{Binding Age}" HorizontalAlignment="Left" Height="25" Margin="70,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Verif" x:Name="button" Click="Button_Click" HorizontalAlignment="Left" Height="29" Margin="238,45,0,0" VerticalAlignment="Top" Width="44"/>

    </Grid>
</Window>
